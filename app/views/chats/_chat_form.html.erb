<%= simple_form_for @chat, url: chats_path do |f| %>
  <%= label_tag :prompt, "What would you like to ask?" %>
  <%= text_field_tag "chat[prompt]", nil, placeholder: "What would you like to ask?" %>
  <%= f.input :file, as: :file, label: "Upload a file (PDF, image, or audio)" %>
  <%= f.hidden_field :game_team_id, value: @game_team.id %>
  <%= f.button :submit, data: { disable_with: "Creating..." } %>
<% end %>
